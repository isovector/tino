#!/usr/bin/env zsh

basename=`basename "$0"`
if [ "$basename" = tino -o "$basename" = t ]; then
  sandy="$basename "
  if [ "$#" -eq 0 ]; then
      basename="usage"
  else
      basename="$1"
      shift
  fi
fi

inpath() { [ -x "`which "$1" 2>/dev/null`" ]; }


root_init() {
  if [ "`id -u`" -ne 0 ]; then
    if inpath sudo && sudo -l >/dev/null 2>&1; then
      as_root() {
        if [ "$1" = exec ]; then ex="exec"; shift; fi
        $ex sudo "$@"
      }
    else
      echo "Warning: sudo not installed or not configured" >&2
      as_root() {
        if [ "$1" = exec ]; then ex="exec"; shift; fi
        $ex su -c "$*"
      }
    fi
  else
    as_root() { "$@" ; }
  fi
}

case "$basename" in
    test)
        echo "hello"
        ;;


    e|edit)
        gvime_ok() { inpath gvim &&
            gvim --serverlist 2>/dev/null | grep '^E$' >/dev/null; }
        gvim_ok() { inpath gvim &&
            gvim --serverlist 2>/dev/null | grep '.' >/dev/null; }
        case "$DISPLAY" in
            :*)
                if gvime_ok; then
                    [ -n "$*" ] || exit 0
                    exec gvim --servername E --remote-tab "$@"
                elif gvim_ok; then
                    [ -n "$*" ] || exit 0
                    exec gvim --remote-tab "$@"
                elif inpath gvim && [ -z "$*" ]; then
                    exec gvim --servername e
                fi ;;
        esac
        if [ -n "$STY" ]; then
            exec ./sandy screen -ln -fn -t Editor tpope editor "$@"
        else
            exec ./sandy editor "$@"
        fi
        ;;

    import)
        FILE=$(ls -t ~/Downloads/* | head -1)
        LOCATION=$(mktemp -d)
        case "$FILE" in
            *.zip)
                unzip "$FILE" -d "$LOCATION"
                ;;
        esac
        beet import "$LOCATION"
        echo "add ~/music" | cmus-remote
        sleep 1s
        echo "refresh"     | cmus-remote
        sleep 1s
        echo "save"        | cmus-remote
        # rm "$FILE"
        ;;

    l|local)
        ~/.tino/local/g "$@"
        ;;

    proxy)
        (   sleep 5 &&
            chromium-browser --proxy-server="socks5://localhost:12345" --host-resolver-rules="MAP * 0.0.0.0 , EXCLUDE localhost"
        ) &
        ssh -vvv -N -D 12345 amaguire@csc.uwaterloo.ca
        ;;

    vpn)
        root_init
        echo -n "OTP: "
        read KEY
        echo "sandy-remote-vpn\n$KEY" > /tmp/ovpn-key
        as_root openvpn --config ~/.ssh/sandy.ovpn --auth-user-pass /tmp/ovpn-key
        rm /tmp/ovpn-key
        ;;


    turtle)
        read -r -d '' TURTLE <<'EOF'
{-# LANGUAGE OverloadedStrings #-}
import Turtle

EOF
        cat <(echo "$TURTLE") "${2:-/dev/stdin}" | stack --verbosity silent runghc
        ;;


    p|pcfb)
        ~/.tino/bin/pcfb-show
        timeout 5s tino xul "file://$HOME/.src/percentile-feedback/index.html" --user-data-dir=/tmp/pcfb-session
        ;;

    refactor)
        SEARCH=$1
        IFS=$'\n' FILES=($(ag $SEARCH -l))

        TMP=$(mktemp -d)
        shift
        for FILE in $FILES; do
          cp --parents $FILE $TMP
        done
        CMDS=()
        for CMD in $*; do
          CMDS+=("'"'+argdo execute "normal '"/$SEARCH\<CR>$CMD"'"'"'")
        done
        CMDS+=('+xa')

        (
          cd $TMP
          echo $CMDS $FILES | xargs vim
          stty sane
        )

        git diff --no-index --diff-filter=M -- . $TMP

        RESULT=""
        while ! [[ "$RESULT" == "y" || "$RESULT" == "n" ]]; do
          echo -n "Like it? y/n: "
          read RESULT
        done

        if [[ "$RESULT" == "y" ]]; then
          for FILE in $FILES; do
            rm "$FILE"
            mv "$TMP/$FILE" "$FILE"
          done
          echo "committing changes..."
        else
          echo "reverting changes..."
        fi

        rm -r $TMP
        ;;

    w|watch)
        source ~/.zshrc
        TEMP=$(mktemp)
        date +%s > $TEMP
        clear
        date +"%H:%M> " | tr -d '\n'
        echo "$@"
        eval "$@"
        while read change; do
            read NOW < $TEMP
            ! [[ "$change" =~ ".sw[po]$" ]] && (
                THEN=$(echo "$change" | grep -o "[^:]*" | head -n1)
                [[ "$NOW" -lt "$THEN" ]] && (
                    clear
                    date +"%H:%M> " | tr -d '\n'
                    echo "$@"
                    eval "$@"
                    date +%s > $TEMP
                    echo ""
                )
            )
        done < <(inotifywait --exclude '^\./\.' --quiet --recursive --monitor --event modify --format "%T:%w%f" --timefmt="%s" .)
        ;;


    xmonad)
        cd ~/.xmonad
        root_init
        make &&
        as_root pkill xmonad
        ;;


    xul)
        RESULT=$1
        shift
        chromium-browser --app="$RESULT" $@
        ;;

    place)
        while read line; do
            if [[ $(echo $line | cut -d' ' -f1) == "$1" ]]; then
                echo $line | tr -s ' ' | cut -d' ' -f2
                exit 0
            fi
        done < ~/.places
        if [[ -e ~/.places.local ]]; then
            while read line; do
                if [[ $(echo $line | cut -d' ' -f1) == "$1" ]]; then
                    echo $line | tr -s ' ' | cut -d' ' -f2
                    exit 0
                fi
            done < ~/.places.local
        fi
        exit 1
        ;;

    where)
        for PIECE in "$@"; do
            if [[ -e "$PIECE" ]]; then
                cd $PIECE
            else
                WHERE=$(~/.tino/bin/tino place $PIECE)
                if [[ $? == 0 ]]; then
                    eval WHERE=$WHERE
                    cd $WHERE
                fi
            fi
        done
        echo $PWD
        ;;

    *)
        ~/.tino/local/g $basename "$@"
        ;;
esac
